{
  "owner": "0xc89D42189f0450C2b2c3c61f58Ec5d628176A1E7",
  "name": "testdb",
  "tables": [
    {
      "name": "users",
      "columns": [
        {
          "name": "id",
          "type": "int",
          "attributes": [
            {
              "type": "primary_key"
            },
            {
              "type": "not_null"
            }
          ]
        },
        {
          "name": "username",
          "type": "text"
        },
        {
          "name": "age",
          "type": "int"
        },
        {
          "name": "wallet",
          "type": "text"
        }
      ]
    },
    {
      "name": "posts",
      "columns": [
        {
          "name": "id",
          "type": "int",
          "attributes": [
            {
              "type": "primary_key"
            },
            {
              "type": "not_null"
            }
          ]
        },
        {
          "name": "user_id",
          "type": "int"
        },
        {
          "name": "title",
          "type": "text"
        },
        {
          "name": "content",
          "type": "text"
        }
      ]
    }
  ],
  "actions": [
    {
      "name": "create_user",
      "public": true,
      "inputs": [
        "$id",
        "$username",
        "$age"
      ],
      "statements": [
        "INSERT INTO users( id , username , age , wallet ) VALUES ( $id , $username , $age , @caller )"
      ]
    },
    {
      "name": "update_username",
      "public": true,
      "inputs": [
        "$username"
      ],
      "statements": [
        "UPDATE users SET username = $username WHERE wallet = @caller"
      ]
    },
    {
      "name": "create_post",
      "public": false,
      "inputs": [
        "$id",
        "$title",
        "$content"
      ],
      "statements": [
        "INSERT INTO posts( id , user_id , title , content ) VALUES ( $id , ( SELECT id FROM users WHERE wallet = @caller ) , $title , $content )"
      ]
    },
    {
      "name": "delete_post",
      "public": true,
      "inputs": [
        "$id"
      ],
      "statements": [
        "DELETE FROM posts WHERE id = $id AND user_id =( SELECT id FROM users WHERE wallet = @caller )"
      ]
    },
    {
      "name": "get_user_by_wallet",
      "public": true,
      "inputs": [
        "$address"
      ],
      "statements": [
        "SELECT * FROM users WHERE wallet = $address"
      ]
    },
    {
      "name": "list_users",
      "public": false,
      "inputs": [],
      "statements": [
        "SELECT * FROM users"
      ]
    },
    {
      "name": "get_user_posts",
      "public": true,
      "inputs": [
        "$username"
      ],
      "statements": [
        "SELECT title , content FROM posts WHERE user_id =( SELECT id FROM users WHERE username = $username )"
      ]
    }
  ]
}